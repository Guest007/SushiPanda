#:kivy 1.10
#:import SmartTile kivymd.grid.SmartTile
#:import MDBottomNavigationItem kivymd.tabs.MDBottomNavigationItem

<Menu>:
    Screen:
        name: 'Menu'
        BoxLayout:
            orientation: 'vertical'
            ActionBar:
                background_color: (0, 5, 0, 0.8)
                pos_hint: {'top':1}
                ActionView:
                    use_sperator: True
                    ActionPrevious:
                        app_icon: 'images/panda.png'
                        title: 'Caffe Panda'
                        with_previous: False
                    ActionOverflow:
                    ActionButton:
                        icon: 'ico.png'
                        on_release: root.manager.current = 'Cart'
# ========================
            ScrollView:
                GridLayout:
                    cols: 1
                    size: self.size
                    size_hint_y: None
                    row_default_height: (self.width - self.cols*self.spacing[0])/2
                    row_force_default: False
                    height: self.minimum_height
                    padding: 3
                    spacing: 3

# ========================
                    SmartTileWithLabel:
                        allow_stretch: True
                        mipmap: False
                        box_color: (1, 1, 1, 0)
                        source: "images/menu/Candies.jpg"
                        on_release: root.manager.current = 'Sushi'


# ========================
<Sushi>:
    name: 'Sushi'
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            background_color: (0, 5, 0, 0.8)
            pos_hint: {'top':1}
            ActionView:
                use_sperator: True
                ActionPrevious:
                    app_icon: 'images/panda.png'
                    title: 'Caffe Panda'
                    with_previous: True
                    on_release: root.manager.current = 'Menu'
                ActionOverflow:
                ActionButton:
                    icon: 'ico.png'
                    on_release: root.manager.current = 'Cart'

# ========================
        ScrollView:
            GridLayout:
                orientation: 'vertical'
                cols: 2
                size_hint_y: None
                row_default_height: (self.width - self.cols * self.spacing[0]) / 2
                row_force_default: True
                height: self.minimum_height
                padding: 0
                spacing: 0
# ========================

                SmartTileWithLabel:
                    allow_stretch: False
                    mipmap: False
                    box_color: (1, 1, 1, 0.5)
                    source: "images/Sushi/CicagoRoll.jpg"
                    text: 'Чикаго Ролл' + '\n  260руб'
                    on_release: root.manager.current = 'Chicago_Roll'

# ========================

<Cart>:
    name: 'Cart'
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            background_color: (0, 5, 0, 0.8)
            pos_hint: {'top':1}
            ActionView:
                use_sperator: True
                ActionPrevious:
                    app_icon: 'images/panda.png'
                    title: 'Caffe Panda'
                    with_previous: True
                    on_release: root.manager.current = 'Menu'
                ActionOverflow:
                ActionButton:
                    icon: 'ico.png'

# ========================

        ScrollView:
            BoxLayout:
                orientation: 'vertical'

# ========================

                Label:
                    text: 'Ваша корзина пуста'
                    color: (0, 0, 0, 0.5)
                    font_size: 30

